<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link href="/build/tailwind.css" rel="stylesheet">

    <style>
        body {
            background-color: #000000; /* Color de fondo oscuro */
            color: #e2e8f0; /* Texto claro */
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .btn-blue {
            background-color: #3182ce;
            color: #e2e8f0;
            padding: 8px 16px;
            border-radius: 4px;
            border: none;
            cursor: pointer;
        }
        .btn-blue:hover {
            background-color: #2c5282;
        }
        .todo-item {
            margin-bottom: 12px;
            padding: 12px;
            background-color: #2d3748;
            border-radius: 4px;
        }
        .todo-item label {
            margin-right: 8px;
        }
        .todo-item input[type="text"],
        .todo-item input[type="checkbox"] {
            background-color: #2d3748; /* Mismo color de fondo que el contenedor */
            color: #e2e8f0; /* Texto claro */
            border: none;
            border-bottom: 2px solid transparent; /* Borde inferior transparente por defecto */
            padding: 4px;
            transition: border-bottom-color 0.3s; /* Transición para el borde inferior */
            outline: none; /* Eliminar el borde de enfoque */
        }
        .todo-item input[type="text"]:focus,
        .todo-item input[type="checkbox"]:focus {
            border-bottom-color: #3182ce; /* Color del borde inferior al enfocar */
        }
    </style>
</head>
<body>
   

    <div class="container">
        <h1 class="text-3xl font-bold mb-4">Todo List</h1>
        <ul>
            <% todos.forEach(function(todo) { %>
            <li id="todo-<%= todo.id %>" class="todo-item">
                <div class="flex items-center bg-red">
                    <span class="text-lg"><%= todo.id %></span>
                    <form action="/todospanel/<%= todo.id %>?_method=PUT" method="POST" class="flex-1">
                        <input type="text" name="title" value="<%= todo.title %>" class="p-2 mr-2">
                        <input type="checkbox" name="completed" <%= todo.completed ? "checked" : "" %> class="mr-2">
                        <button type="submit" class="btn-blue">Actualizar</button>
                    </form>
                    <form action="/todospanel/<%= todo.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn-blue">Eliminar</button>
                    </form>
                </div>
            </li>
            <% }); %>
        </ul>
        <form action="/todospanel" method="POST" class="mt-4">
            <label for="title" class="mr-2">Titulo</label>
            <input type="text" id="title" name="title" placeholder="Title" class="p-2 mr-2">
            <label for="completed" class="mr-2">Completed</label>
            <input type="checkbox" name="completed" id="completed" class="mr-2">
            <button type="submit" class="btn-blue">Agregar Tarea</button>
        </form>

        <div class="container ">
            <!-- (existing content) -->
    
            <h1 class="text-3xl font-bold mb-4">Buscar Tarea por ID</h1>
            <form action="/todospanel/search" method="POST" class="flex mb-4">
                <label for="taskId" class="mr-2">ID de la Tarea</label>
                <input type="text" id="taskId" name="taskId" class="p-2 mr-2" placeholder="Enter Task ID">
                <button type="submit" class="btn-blue">Buscar</button>
            </form>
    
            <% if (errorMessage) { %>
                <div class="error-message text-red-500 mb-4">
                    <%= errorMessage %>
                </div>
            <% } %>

            <% if (todo) { %>
            <div id="todo-<%= todo.id %>" class="todo-item mt-4">
                <h2 class="text-xl font-bold mb-2">Detalle de Tarea</h2>
                <form action="/todospanel/<%= todo.id %>?_method=PUT" method="POST">
                    <input type="text" name="title" value="<%= todo.title %>" class="p-2 mr-2">
                    <input type="checkbox" name="completed" <%= todo.completed ? "checked" : "" %> class="mr-2">
                    <button type="submit" class="btn-blue">Actualizar</button>
                </form>
                <form action="/todospanel/<%= todo.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn-blue">Eliminar</button>
                </form>
            </div>
            <% } %>
        </div>

    <!-- Script para mantener la posición de la ventana después de actualizar un todo -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let scrollPosition = window.scrollY;

            document.querySelectorAll('form[action^="/todospanel"][method="POST"]').forEach(form => {
                form.addEventListener('submit', () => {
                    localStorage.setItem('scrollPosition', window.scrollY);
                });
            });

            if (localStorage.getItem('scrollPosition')) {
                scrollPosition = localStorage.getItem('scrollPosition');
                window.scrollTo(0, scrollPosition);
                localStorage.removeItem('scrollPosition');
            }
        });
    </script>
</body>
</html>
